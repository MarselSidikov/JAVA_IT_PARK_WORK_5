<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.itpark.hibernate.demo.models.Car" table="car">

        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <property name="model"/>

        <many-to-one name="owner" class="ru.itpark.hibernate.demo.models.User"
                     column="owner_id"/>

    </class>
</hibernate-mapping>